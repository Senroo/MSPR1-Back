{% extends 'base.html.twig' %}
{% block title %}Concerts - Back-office{% endblock %}
{% block body %}
    {{ include('sidebar/top.html.twig', {listItem: 3}) }}
    <style>

    </style>
    {{ include('page_title.html.twig', {title: 'Concerts'}) }}
    <div class="main">
        {% for concert in concerts %}
            <div class="my-1">
                <span>{{ concert.stageId }}</span>
                <span>{{ concert.name }}</span>
                <span>{{ concert.description }}</span>
                <span>{{ concert.genre }}</span>
                <span>{{ concert.artistId }}</span>
                <span>{{ concert.startDate|format_date('long', locale='fr') }}</span>
                <span>{{ concert.duration|format_datetime('none', 'short', locale='fr') }}</span>
            </div>
        {% endfor %}
    </div>
    {% include 'sidebar/bottom.html.twig' %}
{% endblock %}
