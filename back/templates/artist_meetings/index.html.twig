{% extends 'base.html.twig' %}
{% block title %}Meetings Artistes - Back-office{% endblock %}
{% block body %}
    {{ include('sidebar/top.html.twig', {listItem: 2}) }}
    <style>
        .main .tableInfo {font-weight: 400; font-size: 14px;}
        .main .tableOptions .tableEdit {color: #6bbce3;}
        .main .tableOptions .tableDelete {color : #df6671;}
        .main .table {
            box-shadow: 0 1px 4px 1px rgba(0,0,0,0.14);
            border-radius: 5px;
            font-family: Roboto,Helvetica,Arial,sans-serif;
            color: rgb(51,51,51);
        }
        .main .tableRow img {width: 25%}
        .main .table tbody {background-color: white; font-size: 14px;}
        .main .table th {padding: 12px 8px; border-color: #ddd;}
        .main .table td {vertical-align: middle;}
        .main .table thead {color: #fff; background-color: #c677d9;}
        .main .table th, .main .table td {width: 25%;}
    </style>
    {{ include('page_title.html.twig', {title: 'Rencontres Artistes'}) }}
    <div class="main px-5 mt-5">
        <div class="text-muted tableInfo">Liste des rencontres avec les artistes (survoler pour révéler les options)</div>
        <table class="table text-center">
            <thead>
            <tr>
                <th>Nom de l'artiste</th>
                <th>Lieu de la rencontre</th>
                <th>Date</th>
                <th class="tableOptionsCol"></th>
            </tr>
            </thead>
            <tbody>
            {% for artistMeeting in artistsMeetings %}
                <tr class="tableRow">
                    <td>{{ artistMeeting.artist.name }}</td>
                    <td>{{ artistMeeting.location }}</td>
                    <td>{{ artistMeeting.date|format_datetime('long', 'short', locale='fr') }}</td>
                    <td class="tableOptions p-0 invisible">
                        <div class="d-flex justify-content-between">
                            <a href="" class="nav-link p-3 mr-1 tableEdit" title="Éditer"><i class="fas fa-edit fa-lg"></i></a>
                            <a href="" class="nav-link p-3 ml-1 tableDelete" title="Supprimer"><i class="fas fa-trash-alt fa-lg"></i></a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {% include 'sidebar/bottom.html.twig' %}
{% endblock %}
